---
interface Props {
	title: string;
	body1: string;
	body2: string;
}

const { title, body1, body2 } = Astro.props;
---

<section class="card">
	<h2 class="text-[#03071e] font-extrabold tracking-widem text-center mb-4 text-3xl transition-colors duration-600 ease-[cubic-bezier(0.22,1,0.36,1)]">
		{title}
	</h2>
	<div class="flex flex-col w-120 text-[#03071e] list-none font-[NewAmsterdam] p-12 bg-[#fffffd] border-2 border-[#f48c06] rounded-lg">
		<p class="mt-2 mb-0 text-[22px]">
			{body1}
		</p>
		<br>
		<p class="mt-2 mb-0 text-[22px]">
			{body2}
		</p>
	</div>
</section>
