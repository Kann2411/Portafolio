---
interface Project {
  title: string;
  description: string;
  image: string;
  link?: string;
}

const { projects = [] } = Astro.props;
---

<section class="py-8">
  <h2 class="text-3xl font-bold text-center mb-6 text-gray-800">Mis Proyectos</h2>
  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {projects.map((project: Project) => (
      <div class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col items-center text-center p-4 transform transition-transform duration-300 hover:-translate-y-2 hover:shadow-lg">
        <img src={project.image} alt={project.title} class="w-full h-48 object-cover rounded-md mb-4" />
        <h3 class="text-xl font-semibold text-gray-800">{project.title}</h3>
        <p class="text-gray-600 text-base mb-4">{project.description}</p>
        {project.link ? (
          <a href={project.link} target="_blank" class="bg-blue-600 text-white font-semibold px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-300">
            Ver Proyecto
          </a>
        ) : (
          <span class="text-gray-500 text-sm italic">Proyecto no disponible en l√≠nea</span>
        )}
      </div>
    ))}
    <span class="text-gray-600 text-xl mb-4 text-center">coming soon...</span>
  </div>
</section>
