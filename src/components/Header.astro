---
interface HeaderProps {
  leftImgSrc: string;
  leftImgAlt: string;
  rightImgSrc: string;
  rightImgAlt: string;
  title: string;
  links: { href: string; label: string }[];
}

const { leftImgSrc, leftImgAlt, rightImgSrc, rightImgAlt, links = []} = Astro.props;
---

<header class="flex items-center justify-between p-4 flex-nowrap mx-auto">
    <div class="containerImg w-[4.5rem] h-[4.5rem] md:w-[3.5rem] md:h-[3.5rem] sm:w-[3rem] sm:h-[3rem]">
        <img src={leftImgSrc} alt={leftImgAlt} class="w-full h-full object-cover">
    </div>
  <nav class="flex-grow text-center">
    <ul class="font-[NewAmsterdam] text-[1.3rem] list-none inline-flex gap-4 m-0 p-0 md:gap-2 sm:gap-1">
      {links.map((link:any) => (
        <li class="relative"><a href={link.href} class="no-underline text-[#03071e] p-2 md:p-1 sm:p-0.5 sm:pr-1 rounded-lg inline-block border-2 border-transparent transition-colors ease-in-out duration-300 hover:scale-110 hover:rotate-2 hover:bg-[#9d0208] hover:text-white hover:shadow-lg active:opacity-85">{link.label}</a></li>
      ))}
    </ul>
  </nav>
  <div class="containerImg w-[4.5rem] h-[4.5rem] md:w-[3.5rem] md:h-[3.5rem] sm:w-[3rem] sm:h-[3rem]">
    <img src={rightImgSrc} alt={rightImgAlt} class="w-full h-full object-cover">
  </div>
</header>
