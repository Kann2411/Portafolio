---
interface props {
	name: string;
	linksHome: { href: string; label: string }[];
}
const { name, linksHome = [] } = Astro.props;
---
<section class="flex-col pt-40 justify-between items-center">
	<div class="containerImg w-80 h-80 -mt-24 flex justify-center items-center mx-auto">
		<img src="/assets/muÃ±eco.png" alt="Kristian Animado" class="w-full h-auto rounded-sm">
	</div>
	<div class="name-links flex flex-col justify-center text-center">
		<div class="titulos">
			<h1 class="font-[NewAmsterdam] text-[70px] text-[#370617] font-extrabold tracking-wide m-0 p-0">
				{name}
			</h1>
			<h3 class="font-[NewAmsterdam] text-[30px] text-[#6a040f] mt-0.5 mb-4 p-0">
